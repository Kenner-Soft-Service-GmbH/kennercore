{
  "fields": {
    "name": {
      "type": "varchar",
      "required": true,
      "trim": true
    },
    "progress": {
      "type": "float",
      "default": 0,
      "min": 0,
      "max": 100
    },
    "progressOffset": {
      "type": "int",
      "default": 0,
      "min": 0
    },
    "type": {
      "type": "enum",
      "required": true
    },
    "data": {
      "type": "jsonObject"
    },
    "status": {
      "type": "enum",
      "required": true,
      "default": "1_new",
      "options": [
        "1_new",
        "2_in_progress",
        "4_success",
        "3_error"
      ]
    },
    "createdAt": {
      "type": "datetime",
      "readOnly": true
    },
    "modifiedAt": {
      "type": "datetime",
      "readOnly": true
    },
    "createdBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    },
    "isClosed": {
      "type": "bool",
      "default": 0
    },
    "isHidden": {
      "type": "bool",
      "default": 0
    }
  },
  "links": {
    "createdBy": {
      "type": "belongsTo",
      "entity": "User"
    }
  }
}