    "collection": {
        "sortBy": "name",
        "asc": true,
        "textFilterFields": [
            "name",
            "sku",
            "ean"
        ]
    },
    "indexes": {
        "name": {
            "columns": [
                "name",
                "deleted"
            ]
        },
        "ownerUser": {
            "columns": ["ownerUserId", "deleted"]
        },
        "assignedUser": {
            "columns": [
                "assignedUserId",
                "deleted"
            ]
        }
    }
