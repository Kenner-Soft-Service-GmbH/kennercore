        },
        "productImages": {
            "type": "hasMany",
            "foreign": "product",
            "entity": "ProductImage"
        },
        "attributes": {
            "type": "hasMany",
            "relationName": "ProductAttributeLinker",
            "foreign": "products",
            "entity": "Attribute"
        },
        "productAttributeValues": {
            "type": "hasMany",
            "foreign": "product",
            "entity": "ProductAttributeValue"
        },
        "productFamily": {
            "type": "belongsTo",
            "foreign": "products",
            "entity": "ProductFamily"
        },
        "brand": {
            "type": "belongsTo",
            "foreign": "products",
            "entity": "Brand"
        },
        "associationMainProducts": {
            "type": "hasMany",
            "foreign": "mainProduct",
