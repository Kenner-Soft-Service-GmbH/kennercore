{
    "controller": "controllers/record",
    "quickCreate": true,
    "navigateToEntityAfterQuickCreate": true,
    "quickCreateOptions": {
        "fullFormDisabled": true
    },
    "boolFilterList": [
        "onlyMy",
        "onlyActive",
        "notLinkedWithProduct"
    ],
    "hiddenBoolFilterList": [
        "onlyActive",
        "notLinkedWithProduct"
    ],
    "disabledMassActions": [
        "merge"
    ],
    "views": {
        "detail": "pim:views/detail",
        "list": "pim:views/list"
    },
    "recordViews": {
        "detail": "pim:views/record/detail",
        "list": "pim:views/record/list",
        "search": "pim:views/record/search"
    },
    "modalViews": {
        "select": "pim:views/modals/select-records"
    },
    "relationshipPanels": {
        "categories": {
            "view": "pim:views/channel/record/panels/categories",
            "createAction": "createRelatedConfigured",
            "selectAction": "selectRelatedEntity",
            "selectBoolFilterList": ["onlyActive", "notLinkedWithChannel"]
        },
        "channelProducts": {
            "label": "Products",
            "layout": "listForProductsInChannel",
            "view": "pim:views/channel/record/panels/channel-products",
            "recordListView": "pim:views/record/list-with-model-edit-check",
            "rowActionsView": "views/record/row-actions/relationship-unlink-only",
            "createAction": "createRelatedEntity",
            "selectAction": "selectRelatedEntity",
            "selectBoolFilterList": ["notLinkedWithChannel"]
        },
        "pricings": {
            "view": "pim:views/channel/record/panels/pricings",
            "rowActionsView": "views/record/row-actions/relationship-unlink-only",
            "layout": "listForPricingsInChannel",
            "selectAction": "selectRelatedEntity",
            "selectBoolFilterList": ["notLinkedWithChannel"]
        }
    },
    "bottomView": {
        "detail": "pim:views/record/detail-bottom"
    },
    "dynamicLogic": {
        "fields": {
            "type": {
                "readOnly": {
                    "conditionGroup": [
                        {
                            "type": "isNotEmpty",
                            "attribute": "id"
                        }
                    ]
                }
            }
        }
    }
}