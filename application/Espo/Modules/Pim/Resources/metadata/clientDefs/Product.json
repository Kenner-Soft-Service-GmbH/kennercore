{
    "controller": "controllers/record",
    "quickCreate": true,
    "navigateToEntityAfterQuickCreate": true,
    "quickCreateOptions": {
        "fullFormDisabled": true
    },
    "boolFilterList": [
        "onlyMy",
        "onlyActive",
        "notEntity",
        "notAssociatedProducts",
        "onlySimple",
        "notBundledProducts",
        "notLinkedWithOrder",
        "notLinkedWithChannel",
        "notLinkedWithSupplier",
        "notLinkedWithWarehouse",
        "notLinkedWithBrand",
        "notLinkedWithProductFamily",
        "notLinkedWithPackaging"
    ],
    "hiddenBoolFilterList": [
        "onlyActive",
        "notEntity",
        "notAssociatedProducts",
        "onlySimple",
        "notBundledProducts",
        "notLinkedWithOrder",
        "notLinkedWithChannel",
        "notLinkedWithSupplier",
        "notLinkedWithWarehouse",
        "notLinkedWithBrand",
        "notLinkedWithProductFamily",
        "notLinkedWithPackaging"
    ],
    "disabledMassActions": [
        "merge"
    ],
    "views": {
        "list": "pim:views/list",
        "detail": "pim:views/product/detail"
    },
    "recordViews": {
        "list": "pim:views/product/record/list",
        "detail": "pim:views/product/record/detail",
        "search": "pim:views/product/record/search"
    },
    "modalViews": {
        "select": "pim:views/modals/select-records"
    },
    "relationshipPanels": {
        "attributes": {
            "label": "Product Attributes",
            "view": "pim:views/product/record/panels/attributes",
            "createAction": "createRelatedConfigured",
            "selectAction": "selectAttribute",
            "aclScopesList": ["Attribute"]
        },
        "categories": {
            "view": "pim:views/product/record/panels/categories",
            "createAction": "createRelatedConfigured",
            "selectAction": "selectRelatedEntity",
            "selectBoolFilterList": ["onlyActive", "notLinkedWithProduct"]
        },
        "productImages": {
            "label": "Image",
            "view": "pim:views/product/record/panels/product-images",
            "recordListView": "pim:views/product-image/record/product-relationship",
            "rowActionsView": "views/record/row-actions/relationship-edit-and-remove",
            "select": false
        },
        "supplierProducts": {
            "label": "Suppliers",
            "view": "pim:views/product/record/panels/supplier-products",
            "createAction": "createRelatedEntity",
            "selectAction": "selectRelatedEntity",
            "selectBoolFilterList": ["onlyActive", "notLinkedWithProduct"],
            "aclScopesList": ["Supplier"]
        },
        "associationMainProducts": {
            "label": "Association Products",
            "rowActionsView": "views/record/row-actions/relationship-edit-and-remove",
            "select": false,
            "aclScopesList": ["Association"]
        },
        "productTypeBundles": {
            "label": "Bundle Items",
            "view": "pim:views/product/record/panels/product-bundles",
            "selectAction": "selectRelatedEntity",
            "selectBoolFilterList": ["onlySimple", "onlyActive", "notEntity", "notBundledProducts"]
        },
        "productTypePackages": {
            "label": "Package Details",
            "view": "pim:views/product/record/panels/product-packages"
        },
        "channelProducts": {
            "label": "Channels",
            "layout": "listForChannelsInProducts",
            "view": "pim:views/product/record/panels/channel-products",
            "recordListView": "pim:views/record/list-with-model-edit-check",
            "rowActionsView": "views/record/row-actions/relationship-unlink-only",
            "createAction": "createRelatedEntity",
            "selectAction": "selectRelatedEntity",
            "selectBoolFilterList": ["notLinkedWithProduct"],
            "aclScopesList": ["Channel"]
        },
        "channelProductAttributeValues": {
            "label": "Product Channel Attributes",
            "view": "pim:views/product/record/panels/channel-product-attribute-values",
            "aclScopesList": ["Attribute", "Channel"]
        }
    },
    "bottomPanels": {
        "detail": [
            {
                "name": "itemInProducts",
                "label": "Item in Products",
                "view": "pim:views/product/record/panels/item-in-products",
                "layout": "listForItemInProducts",
                "rowActionsView": "views/record/row-actions/empty",
                "sortBy": "type",
                "asc": true,
                "order": 1
            }
        ]
    },
    "bottomView": {
        "detail": "pim:views/record/detail-bottom"
    },
    "optionalBottomPanels": {
        "itemInProducts": [
            {
                "field": "type",
                "value": "simpleProduct"
            }
        ],
        "productTypePackages": [
            {
                "field": "type",
                "value": "packageProduct"
            }
        ],
        "productTypeBundles": [
            {
                "field": "type",
                "value": "bundleProduct"
            }
        ]
    },
    "dynamicLogic": {
        "fields": {
            "type": {
                "readOnly": {
                    "conditionGroup": [
                        {
                            "type": "isNotEmpty",
                            "attribute": "id"
                        }
                    ]
                }
            }
        }
    }
}