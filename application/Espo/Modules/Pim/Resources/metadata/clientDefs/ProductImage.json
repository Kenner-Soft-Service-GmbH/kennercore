{
    "controller": "controllers/record",
    "boolFilterList": [
        "onlyMy"
    ],
    "disabledMassActions": [
        "merge"
    ],
    "modalViews": {
        "edit": "pim:views/product-image/modals/edit"
    },
    "recordViews": {
        "list": "pim:views/record/list",
        "editQuick": "pim:views/product-image/record/edit-small"
    },
    "dynamicLogic": {
        "fields": {
            "imageLink": {
                "visible": {
                    "conditionGroup": [
                        {
                            "type": "equals",
                            "attribute": "type",
                            "value": "Link"
                        }
                    ]
                },
                "readOnly": {
                    "conditionGroup": [
                        {
                            "type": "isNotEmpty",
                            "attribute": "id"
                        }
                    ]
                }
            },
            "image": {
                "visible": {
                    "conditionGroup": [
                        {
                            "type": "equals",
                            "attribute": "type",
                            "value": "File"
                        }
                    ]
                },
                "readOnly": {
                    "conditionGroup": [
                        {
                            "type": "isNotEmpty",
                            "attribute": "id"
                        }
                    ]
                }
            },
            "alt": {
                "visible": {
                    "conditionGroup": [
                        {
                            "type": "notEquals",
                            "attribute": "type",
                            "value": "Files"
                        }
                    ]
                }
            },
            "isMain": {
                "visible": {
                    "conditionGroup": [
                        {
                            "type": "notEquals",
                            "attribute": "type",
                            "value": "Files"
                        }
                    ]
                }
            },
            "imagesMultiple": {
                "visible": {
                    "conditionGroup": [
                        {
                            "type": "equals",
                            "attribute": "type",
                            "value": "Files"
                        }
                    ]
                }
            },
            "type": {
                "readOnly": {
                    "conditionGroup": [
                        {
                            "type": "isNotEmpty",
                            "attribute": "id"
                        }
                    ]
                }
            }
        }
    }

}